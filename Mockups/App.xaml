<Application x:Class="Mockups.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <Style x:Key="Buttons.Dialog" TargetType="Button">
                <Setter Property="Width" Value="65" />
                <Setter Property="Margin" Value="5" />
            </Style>

            <Style x:Key="Buttons.Dialog.Ok" TargetType="Button" BasedOn="{StaticResource Buttons.Dialog}">
                <Setter Property="Content" Value="Ok" />
                <Setter Property="IsDefault" Value="True" />
            </Style>

            <Style x:Key="Buttons.Dialog.Cancel" TargetType="Button" BasedOn="{StaticResource Buttons.Dialog}">
                <Setter Property="Content" Value="Cancel" />
                <Setter Property="IsCancel" Value="True" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
